</div><!-- /.block - Special offer -->
</div><!-- /.col-left -->
<div class="col-sm-9 col-right">
<div class="banner">
    <a href="@quangCao[3].LinkQuangCao"><img alt="" src="@quangCao[3].AnhDaiDien"></a>
</div>
<div class="page-title">
    <h1>@ViewBag.TenChuyenMuc</h1>
</div>
<div class="toolbar">
    <div class="sorter">
        <p class="view-mode">
            <label>View as:</label>
            <strong class="grid" title="Grid">Grid</strong>&nbsp;
         
        </p>
    </div><!-- /.sorter -->
    <div class="pager">
        <div class="sort-by hidden-xs">
            <label>Sắp xếp:</label>
            <select class="form-control input-sm">
                <option selected="selected">Vị trí</option>
                <option>Tên</option>
                <option>Giá</option>
            </select>
            <a title="Set Descending Direction" href="#"><span class="fa fa-sort-amount-desc"></span></a>
        </div>
        <div class="limiter hidden-xs">
            <label>Show:</label>
            <div class="limiter-inner">
                <select class="form-control input-sm">
                    <option>9</option>
                    <option selected="selected">12</option>
                    <option>24</option>
                    <option>36</option>
                </select>
            </div>
        </div>
    </div><!--- /.pager -->
</div><!-- /.toolbar -->
<div class="row products">
@foreach (var item in DsSanPham)
{
    <div class="col-md-3 col-sm-6">
        <div class='productslider-item item'>
            <div class="item-inner">
                <div class="images-container">
                    <div class="product_icon">
                        @if (item.GiaGiam > 0)
                        {
                            <div class="sale-icon"><span>@Math.Round(double.Parse((100 - ((item.GiaGiam * 100) / item.Gia)).ToString()))  %</span></div>
                        }
                    </div>
                    <a href="/QuanLySanPham/ChiTietSanPham/@item.MaSanPham" onclick="TangLuot(@item.MaSanPham)" title="@item.TenSanPham" class="product-image">
                        <img src="@item.AnhDaiDien" alt="@item.TenSanPham"  style="height: 160px;"/>
                    </a>
                   
                </div>
                <div class="des-container">
                    <h2 class="product-name">
                        <a href="/QuanLySanPham/ChiTietSanPham/@item.MaSanPham" onclick="TangLuot(@item.MaSanPham)" title="@item.TenSanPham">@if (item.TenSanPham.Length > 20)
                                                                                                         {
                                                                                                             @item.TenSanPham.Substring(0, 20);
                                                                                                         }
                                                                                                         else
                                                                                                         {
                                                                                                             @item.TenSanPham;}</a>
                    </h2>
                    <div class="price-box">
                        @if (item.GiaGiam > 0)
                        {
                            <p class="special-price">
                                <span class="price-label">Giá : </span>
                                <span class="price">@double.Parse(item.GiaGiam.ToString()).ToString("#,##0")</span>
                            </p>
                                            <p class="old-price">
                                                <span class="price-label">Giá NY: </span>
                                                <span class="price">@double.Parse(item.Gia.ToString()).ToString("#,##0")</span>
                                            </p>
                        }
                        else
                        {
                            <p class="special-price">
                                <span class="price-label">Giá NY: </span>
                                <span class="price">@double.Parse(item.Gia.ToString()).ToString("#,##0")</span>
                            </p>
                            <p class="old-price">
                                <span class="price-label">&nbsp;</span>
                                <span class="price">&nbsp;</span>
                            </p>
                        }
                    </div>
                    <div class="ratings">
                        <div class="rating-box">
                            <div class="rating" style="width: 67%"></div>
                        </div>
                        <span class="amount"><a href="#">@item.LuotXem Lượt xem</a></span>
                        @using (Html.BeginForm("ThemVaoGioHang", "GioHang", new { id = item.MaSanPham, SoLuong = 1 }, FormMethod.Post, new { enctype = "multipart/form-data", id = "fromThem" }))
                        {

                            <a href="javascript:;" style="width: 100%" class="btn btn-danger btn-cart" onclick="$(this).closest('form').submit();">Thêm vào giỏ</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

</div><!-- /.product -->
<div class="toolbar">
    <div class="sorter">
        <p class="view-mode">
            <label>View as:</label>
            <strong class="grid" title="Grid">Grid</strong>&nbsp;
            @*<a class="list" title="List" href="#">List</a>&nbsp;*@
        </p>
    </div><!-- /.sorter -->
    <div class="pager">
