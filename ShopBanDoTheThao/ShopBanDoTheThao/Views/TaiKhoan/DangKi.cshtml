@model ShopBanDoTheThao.Models.TaiKhoan

@{
    ViewBag.Title = "Đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DangKi", "TaiKhoan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Tạo tài khoản :</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Tên tài khoản</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TenTaiKhoan, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
           
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Mật khẩu</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Đăng kí" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




