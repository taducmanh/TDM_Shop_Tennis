@model IEnumerable<ShopNoiThat.Models.Mproduct>
<div class="row">
    @foreach (var item in Model)
    {
        int sale = (int)item.pricesale;
        float price = (int)item.price - (int)item.price / 100 * (int)sale;
        <div class="col-md-4 mb-4">
            <div class="card h-100">
              
                <a href="~/@item.slug"><img class="card-img-top" style="width:100%;height:250px;object-fit:contain" src="~/public/images/@item.img" alt="Card image"></a>
                <div class="card-body">
                    <h5 class="card-title"><a href="~/@item.slug" class="" style="font-size:16px;">@item.name</a></h5>
                    @if (sale > 0)
                    {   <div class="d-flex ">
                        <h6 class="font-weight-bold" style="margin-right:6px"><strike>@item.price.ToString("N0") VND</strike></h6>
                        <h6 class="font-weight-bold text-danger">@price.ToString("N0") VND</h6>
                        <span class="text-white pl-3 text-danger">(-@sale%)</span>
                    </div>
                    }
                    else
                    {
                        <h6 class="font-weight-bold text-orange">@item.price.ToString("N0") VND</h6>
                    }
                    <div class="d-flex justify-content-between flex-column  mt-3">
                        <a href="@item.slug" class="btn btn-sm text-white btn-warning"><i class="fas fa-eye"></i> Chi tiết</a>
                        <button onclick="addcart(@item.ID)" class="btn btn-sm text-white btn-dodam"><i class="fas fa-cart-plus"></i>+ Giỏ hàng</button><input type="hidden" value="1" id="sel1" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>