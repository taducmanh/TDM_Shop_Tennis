@model IEnumerable<ShopNoiThat.Models.Mcategory>
@{ var mainmenuitem = ViewBag.mainmenuitem;}
<div class="nav-item ">
    <a style="white-space:nowrap" class="nav-link collapsed  border-bottom" href="~/@mainmenuitem.slug" data-toggle="collapse" data-target="#row_@mainmenuitem.ID">
        @mainmenuitem.name <i class="fas fa-chevron-down float-right"></i>
    </a>

    <div class="collapse" id="row_@mainmenuitem.ID" aria-expanded="false">
        <ul class="flex-column pl-2 nav bg-light">
            @foreach (var item in Model)
            {
                <li class="nav-item border-bottom"><a style="white-space:nowrap" class="nav-link py-1" href="~/@item.slug">@item.name </a></li>
            }


        </ul>
    </div>
</div>